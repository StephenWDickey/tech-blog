



{{#unless loggedIn}} 
<div class="p-5">
  <h1 class="text-light pt-5 px-5 border-bottom border-light">You need to login or sign-up to view posts!</h1>
  <a href="/login" class="mx-5 mt-3 btn btn-dark btn-lg login">Login!</a>
</div>
{{else}}
  <div class="p-5 mx-5">
    <h1 class="text-light border-bottom border-light pt-5">Showing Your Posts</h1>
    <button class="mx-5 mt-3 btn btn-dark btn-lg addPost">Create a new Post</button>
    <div class="post-container"> 
    </div>
    {{#each posts as |post|}}
    <div class=" rounded post border border-dark bg-dark m-5 p-5" data-post-id="{{this.id}}">
      <ul class="mt-3 post-list border border-dark bg-light rounded" > 
        <li>
          <article class="user-post">
          <div class="title">
            <h1 class="text-dark fw-bold post-title">{{post.title}}</h1>
            <p>{{post.post_content}}</p>
          </div>
        
          <div class="meta border-top border-dark">
            {{post.vote_count}} point(s) by {{post.user.username}} on
            {{post.created_at}}
        |
            <a  class="text-dark fw-bold comments-length">{{post.comments.length}} comment(s)</a>
          </div>
        
          </article>
        </li>
      </ul>
      <div class = "edit-container">
        <div class="options-container text-light overflow-hidden float-end">Click here for more options</div>
      </div>
      
      
    </div>
    {{else}}
    <div class="p-5 mx-5">
      <h1 class="pt-5 text-light border-bottom border-light">Looks like you haven't posted anything yet!<h1>
      <p class="text-light border-bottom border-light">Use the Create a new Post button to get started.</p>
    </div>
    {{/each}}
{{/unless}}


{{#if loggedIn}}
<script src="/javascript/logout.js"></script>
<script src="/javascript/dashboard.js"></script>
{{/if}}
